generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  SCHOOL
  TEACHER
  STUDENT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model School {
  id        Int       @id @default(autoincrement())
  name      String
  directorFirstName String
  directorLastName  String
  address   String
  phone     String
  email     String   @unique
  password  String
  website   String?
  logo      String?

  role      Role

  teachers  Teacher[]
  students  Student[]
  groupClasses GroupClass[]
}

model Teacher {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  address   String
  password  String

  schoolId  Int
  school    School   @relation(fields: [schoolId], references: [id])

  groupClasses GroupClass[] @relation("GroupClassTeacher")
}

model Student {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  phone     String
  address   String
  birthDate DateTime
  parentFirstName String
  parentLastName  String
  parentPhone     String
  parentEmail     String

  gender    Gender

  schoolId  Int
  school    School   @relation(fields: [schoolId], references: [id])

  groupClassId  Int
  groupClass    GroupClass   @relation(fields: [groupClassId], references: [id])
}

model GroupClass {
  id        Int      @id @default(autoincrement())
  name      String

  schoolId  Int
  school    School   @relation(fields: [schoolId], references: [id])

  students  Student[]
  teachers  Teacher[] @relation("GroupClassTeacher")
}
